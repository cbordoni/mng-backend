{
  "name": "mng-backend-v2",
  "version": "1.0.50",
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "dev": "bun run --watch src/index.ts",
    "dev:sync": "DB_SYNC=true bun run --watch src/index.ts",
    "start": "bun src/index.ts",
    "start:sync": "DB_SYNC=true bun src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check --write src/"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.4.13",
    "drizzle-orm": "^0.45.1",
    "elysia": "latest",
    "neverthrow": "^8.2.0",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8"
  },
  "module": "src/index.js"
}
